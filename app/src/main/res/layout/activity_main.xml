<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#222"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/resultTime"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:background="@drawable/round_shape"
            android:gravity="center"
            android:text="00:00:00"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <Button
            android:id="@+id/stopBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="22sp"
            android:layout_marginTop="92dp"

            android:padding="10sp"
            android:text="Stop"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/startBtn"
            app:layout_constraintTop_toBottomOf="@+id/resultTime">

        </Button>

        <Button
            android:id="@+id/startBtn"
            android:layout_width="120sp"
            android:textColor="@color/white"

            android:layout_height="wrap_content"
            android:layout_margin="22sp"
            android:layout_marginTop="20dp"

            android:baselineAligned="false"
            android:padding="10sp"
            android:text="Start"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/stopBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultTime">

        </Button>

        <Button
            android:id="@+id/resetBtn"
            android:textColor="@color/white"

            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:layout_marginTop="40dp"


            android:padding="10sp"
            android:text="Reset"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/stopBtn"
            app:layout_constraintStart_toStartOf="@+id/startBtn"
            app:layout_constraintTop_toBottomOf="@+id/startBtn"></Button>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>